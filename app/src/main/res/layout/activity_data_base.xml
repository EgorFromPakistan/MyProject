<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list_tasks2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_add"
        android:id="@+id/rv_list_tasks">
    </android.support.v7.widget.RecyclerView>

    <EditText android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/et_new_tasks"
        android:layout_toStartOf="@+id/btn_add"
        tools:ignore="RtlCompat" />
    <Button android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/et_new_tasks"
        android:layout_alignBottom="@+id/et_new_tasks"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_add"
        android:text="New"
        tools:ignore="RtlCompat" />
</RelativeLayout>